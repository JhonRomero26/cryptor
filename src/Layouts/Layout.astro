---
import SEO from "@/components/SEO.astro";
import "@/styles.css";
import type { Preload } from "@/types/Preload";

type Props = {
  title: string
  description: string
  canonical?: string
  lang?: string
  preload?: Array<Preload>
  image?: string
}

const {
  title,
  description,
  canonical,
  preload,
  image
} = Astro.props

---


<html lang="en">
	<head>
		<SEO
		title={title}
		description={description}
		canonical={canonical}
		preload={preload}
		image={image}	/>
	</head>
	<body class="min-h-screen bg-white dark:bg-gray-900 text-white">
    <slot />
	</body>
</html>